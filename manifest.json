{
    "manifest_version": 3,
    "name": "Medical Terminology Translator",
    "version": "1.0",
    "description": "Translate medical terms into layman's terms and enhance health literacy.",
    "permissions": ["activeTab", "storage", "contextMenus"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    }
  }